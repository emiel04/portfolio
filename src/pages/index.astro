---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import {SITE_TITLE, SITE_DESCRIPTION, LINKEDIN_URL, GITHUB_URL} from '../consts';
import SmoothScroll from '../components/SmoothScroll';
import Typewriter from "astro-typewriter";
import DownloadButton from "../components/DownloadButton.astro";
import '../styles/scroll-indicator.css'
import LinkButton from "../components/LinkButton.astro";
---

<!doctype html>
<html data-theme="dark" lang="en">
<head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION}/>
</head>
<body>
<div class="z-200 text-gray-200 main-content relative bg-primary" id="start">
    <div class="bg"></div>
    <Header/>

    <main class="relative">
        <section id="home"
                 class="max-w-screen-xl px-4 md:py-10 mx-auto flex flex-col justify-center pt-6 xs:pt-0 lg:min-h-[500px]">
            <div class="mb-20 md:mb-36">
				<div class="mb-52 mt-20">

                <p class="special-font text-4xl sm:text-5xl font-bold mb-3 fade-up-0"><span
                        class="blue-gradient">Hey :)</span><span class="emoji">ðŸ‘‹</span></p>
                <p class="special-font text-4xl sm:text-5xl font-bold mb-6 fade-up-2">My name is Emiel</p>
                <div class="text-3xl blue-gradient fade-up-4 mb-4">
                    <Typewriter messages={["< Passionate developer />", "< Full Stack />", "< Hobbyist />", "< Team player />"]}/>
                </div>
                    <p class="text fade-up-4 sm:max-w-[55rem] text-gray-500 text-xl mb-4">A recent Software Engineering
                        graduate from Howest Brugge with a broad
                        interest in various IT fields. I have primarily developed my skills in creating web
                        applications and am eager to expand my expertise into new areas as needed.
                    </p>
                    <div class="mb-4 flex items-center thin text-sm gap-2 fade-up-6">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-map-pin-icon lucide-map-pin"><path d="M20 10c0 4.993-5.539 10.193-7.399 11.799a1 1 0 0 1-1.202 0C9.539 20.193 4 14.993 4 10a8 8 0 0 1 16 0"/><circle cx="12" cy="10" r="3"/></svg>
                        Bruges, Belgium

                    </div>
                    <div class="flex gap-3">
                        <DownloadButton downloadUrl="/files/CV-Emiel-Delaey.pdf" class="fade-up-8 grow-0">
                            Download CV
                        </DownloadButton>
                        <LinkButton class="fade-up-10 " external linkUrl={LINKEDIN_URL}>
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-linkedin-icon lucide-linkedin"><path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/><rect width="4" height="12" x="2" y="9"/><circle cx="4" cy="4" r="2"/></svg>                        </LinkButton>
                        <LinkButton class="fade-up-12" external linkUrl={GITHUB_URL}>
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-github-icon lucide-github"><path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/><path d="M9 18c-4.51 2-5-2-7-2"/></svg>                        </LinkButton>
                    </div>

                </div>

                <a class="scroll-indicator block smooth-link scroll-indicator-init" href="#about">
                    <div class="scroll-dot"></div>
                </a>
            </div>

        </section>
        <section id="about" class="max-w-screen-xl px-4 md:py-10 mx-auto pt-6 xs:pt-0">
            <h2 class="text-2xl h-20">About</h2>
        </section>
        <section id="blog" class="max-w-screen-xl px-4 md:py-10 mx-auto pt-6 xs:pt-0">
            <h2 class="text-2xl h-20">Blog</h2>
        </section>
    </main>
    <!-- <Footer /> -->
    <div id="menuSidebar" class="sidebar-menu fixed sm:hidden">
        <div class="internal-links flex flex-col gap-10 p-6">
            <a href="#start" class="uppercase font-medium text-white">Home</a>
            <a href="#about" class="uppercase font-medium text-white">About</a>
            <a href="#blog" class="uppercase font-medium text-white">Blog</a>
        </div>
    </div>
</div>

<SmoothScroll client:only="react"/>
</body>
</html>
