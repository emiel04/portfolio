---
import { Icon } from "astro-icon/components";
---

<div class="fixed top-[64px] right-0 left-0 z-40">
	<div class="mx-auto max-w-3xl px-4 py-2 sm:px-6 lg:px-8">
		<a
			href="/#blog"
			class="group inline-flex items-center gap-2 rounded-md bg-black/60 p-2 text-sm text-gray-400 text-white backdrop-blur-sm transition-colors duration-200"
		>
			<Icon
				name="arrow-left"
				class="h-4 w-4 transition-transform duration-200 group-hover:-translate-x-1"
			/>
			Back to blogs
		</a>
	</div>
</div>

<script>
	import { gsap } from "gsap";
	import { ScrollTrigger } from "gsap/ScrollTrigger";
	gsap.registerPlugin(ScrollTrigger);

	const backButton = document.querySelector(".fixed");

	gsap.from(backButton, {
		y: -100,
		opacity: 0,
		duration: 0.5,
		ease: "power2.out",
	});
</script>

